{
    "manifest_version": 3,
    "name": "Text Buddy",
    "version": "1.0",
    "description": "Translate text and correct sentences with ease",
    "permissions": ["activeTab", "storage", "contextMenus"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+T",
          "mac": "Command+Shift+T"
        }
      }
    }
  }